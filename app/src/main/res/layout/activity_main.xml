<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvActivityResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnStartActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START ACTIVITY FOR RESULT" />

    <Button
        android:id="@+id/btnStartActivitySuspend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START ACTIVITY FOR RESULT SUSPEND" />


    <TextView
        android:id="@+id/tvPermissionsResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnRequestPermissions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REQUEST PREMISSIONS" />


    <Button
        android:id="@+id/btnRequestPermissionsSuspend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REQUEST PREMISSIONS SUSPEND" />

</LinearLayout>